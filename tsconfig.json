{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": ["./packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
