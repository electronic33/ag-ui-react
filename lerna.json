{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {    
      "conventionalCommits": true,
      "message": "chore(release): publish (version)",
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/rollup.config.js", "**/*.md"],
      "allowBranch": "main"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**", "**/rollup.config.js", "**/*.md"],
      "allowBranch": "main"
    }
  }
}